{% extends 'base.html.twig' %}

{% block title %}Hello PayementController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Payement de Siege</h1>

    {% if connected == true %}
        <p>Your are connected please proceed</p>

        {% elseif connected == false %}
            <p>Your are not connected please connect to an account or create one</p>
            <form action="{{ path('login') }}" method="post">
                <label for="username">Email:</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}"/>

                <label for="password">Password:</label>
                <input type="password" id="password" name="_password"/>

                {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}

                <button type="submit">login</button>
            </form>
    {% endif %}

    {% if siege == null %}
        <h1>Vous n'avez pas séléctionner un siege</h1>
        <a href="{{ path('app_salle_seance')}}">Return</a>
    {% else %}
        {% for siege in siege %}
            <p>{{ siege.numeroSiege }} 15 euro</p>

        {% endfor %}
    {% endif %}

    <h1>{{ total }} euro</h1>

</div>
{% endblock %}
